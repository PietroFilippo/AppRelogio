{
  "name": "clockapp",
  "private": true,
  "version": "1.1.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite build --watch\" \"electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.pietrofilippo.clockapp",
    "productName": "Clock App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3"
  }
}
